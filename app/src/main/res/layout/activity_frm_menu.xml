<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frm_menu">

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/tableRowBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="-1dp"
            android:paddingBottom="10dp">


            <TextView
                android:id="@+id/txa"
                android:padding="2dp"
                android:text=""></TextView>

            <Button
                android:id="@+id/btn_daftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/gb_add"
                android:gravity="center|center_horizontal"
                android:padding="1dp"
                android:textColor="#01579b"
                android:text="Pendaftaran"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txb"
                android:padding="2dp"
                android:text=""></TextView>

            <Button
                android:id="@+id/btn_kebijakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/gb_kertas"
                android:gravity="center|center_horizontal"
                android:padding="1dp"
                android:textColor="#01579b"
                android:text="Kebijakan"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txc"
                android:padding="2dp"
                android:text=""></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRowBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/txa1"
                android:padding="2dp"
                android:text=""></TextView>

            <Button
                android:id="@+id/btn_informasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/gb_informasii"
                android:gravity="center|center_horizontal"
                android:padding="1dp"
                android:textColor="#01579b"
                android:text="Informasi"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txb1"
                android:padding="2dp"
                android:text=""></TextView>

            <Button
                android:id="@+id/btn_wilayah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableTop="@drawable/gb_cara"
                android:gravity="center|center_horizontal"
                android:padding="1dp"
                android:textColor="#01579b"
                android:text="Cara Melapor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txc2"
                android:padding="2dp"
                android:text=""></TextView>
        </TableRow>

        <TableRow
        android:id="@+id/tableRowBtn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/txa11"
            android:padding="2dp"
            android:text=""></TextView>

        <Button
            android:id="@+id/btn_masuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:drawableTop="@drawable/gb_masukk"
            android:gravity="center|center_horizontal"
            android:padding="1dp"
            android:textColor="#01579b"
            android:text="Masuk Sistem"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txb13"
            android:padding="2dp"
            android:text=""></TextView>

        <Button
            android:id="@+id/btn_keluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:drawableTop="@drawable/gb_log"
            android:gravity="center|center_horizontal"
            android:padding="1dp"
            android:textColor="#01579b"
            android:text="Exit"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txc3"
            android:padding="2dp"
            android:text=""></TextView>
    </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/txt_user"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableLayout1"
        android:text="DINAS PEKERJAAN UMUM"
        android:textColor="#01579b"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:text="KOTA BANDAR LAMPUNG"
        android:textColor="#01579b"
        android:textAlignment="center"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView2"
        android:text="Jl. Pulau Sebesi No. 68 , Sukarame kota Bandar Lampung 35131
No. Telpon (0721) 7620300"
        android:textAlignment="viewEnd"
        android:textColor="#01579b" />


</RelativeLayout>